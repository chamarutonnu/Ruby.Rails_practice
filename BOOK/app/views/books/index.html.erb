<h1>タイトル</h1>

<table>
  <tr>
    <th>Title</th><th>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%=link_to "show", book_path(book)%></td>
  <td><%=link_to "edit", edit_book_path(book) %></td>
  <td><%=link_to "destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %>
  </td>
</tr>
<% end %>
</table>

<h3>New book</h3>
<% if @book.errors.any? %>
<p><%=@book.errors.full_messages.length%> errors prohibited this book from being saved:</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
<br>
    <%= f.submit 'Create Book' %>
    <% end %>


